<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IIUMPassXamarin"
             x:Class="IIUMPassXamarin.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        
        <StackLayout  Margin="10,10,10,20" Padding="10">
            <Frame>
                <StackLayout>
                    <Label Text="Enter Credentials And Save" Margin="5,0,5,0"></Label>
                    <Entry  x:Name="EntryNum" Placeholder="Matric Number" Keyboard="Telephone"></Entry>
                    <Entry  x:Name="EntryPass" IsPassword="True"  Placeholder="Password"></Entry>
                    <Button Clicked="Button_OnClicked" Text="Save"/>
                </StackLayout>
            </Frame>
            
        </StackLayout>
        <StackLayout Grid.Row="1">
            <Button Text="Login To IIUM-Student" Clicked="Button_OnClicked2"  Margin="10,10,10,0" Padding="10"></Button>
            <Button Text="Logout" Clicked="OnClicked_Logout"  Margin="10,0,10,0" Padding="10"></Button>
        </StackLayout>
    </Grid>
    

</ContentPage>
